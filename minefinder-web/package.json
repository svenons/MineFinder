{
  "name": "minefinder-web",
  "private": true,
  "version": "0.0.0",
  "description": "MineFinder - Find and map mines in a minefield, plotting a safe path through points from start to finish",
  "author": {
    "name": "MineFinder Team",
    "email": "minefinder@svenons.xyz"
  },
  "homepage": "https://github.com/svenons/MineFinder",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-dev": "concurrently -k \"vite --port 5173\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win --publish never",
    "build:mac": "vite build && electron-builder --mac --publish never",
    "build:linux": "vite build && electron-builder --linux --publish never",
    "build:all": "vite build && electron-builder -mwl --publish never"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-is-dev": "^2.0.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.minefinder.app",
    "productName": "MineFinder",
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Game",
      "maintainer": "MineFinder Team <contact@minefinder.dev>"
    }
  }
}
