# Copy this to .env and fill in your values
# MQTT - HiveMQ Cloud or other broker
MQTT_BROKER_URL=your-cluster.hivemq.cloud
MQTT_BROKER_PORT=8883
MQTT_USE_TLS=true
MQTT_USERNAME=
MQTT_PASSWORD=

# Mode: simulator | real
MODE=simulator
ATTACHMENT_ID=minefinder-pi-001
ATTACHMENT_NAME=MineFinder Drone Unit 1

# Drone Connection
DRONE_CONNECTION=/dev/ttyUSB0
DRONE_BAUD=57600
DEFAULT_ALTITUDE_M=10.0
DEFAULT_SPEED_MS=5.0
WAYPOINT_ACCEPT_RADIUS_M=2.0

# Battery Safety
MIN_BATTERY_PCT=20.0
MAX_FLIGHT_TIME_MIN=15.0
VOLTAGE_WARNING=11.1
VOLTAGE_CRITICAL=10.5

# Failsafe Behavior
GPS_LOSS_ACTION=return_to_start
CAMERA_FAILURE_RETRIES=3
CAMERA_FAILURE_ACTION=return_to_start
ML_NAN_ACTION=assume_mine
COMMS_LOSS_ACTION=continue

# Simulator Settings
MINE_PROBABILITY=0.05
SIM_SPEED_MS=2.0
TELEMETRY_HZ=5.0

# Machine Learning
ML_CHECKPOINT=./demo-MiniCenter/fold_1_best.pt
ML_CONFIDENCE_THRESHOLD=0.5
ML_DEVICE=cpu

# Sensor
SENSOR_TYPE=simulator
FLIR_DEVICE_ID=0
TEST_IMAGES_DIR=./test_images
