@startuml MineDetectionDrone_Activity_V11
title Automated Mine Detection, Path Planning & Flyer Distribution

start

partition "Operator / Mission Controller" {
  :Provide Final Destination to Drone;
  :Initialize Mission Parameters;
  :Activate Drone Systems;
}

partition "Flight Controller" {
  :Take Off;
  :Move Towards Initial Waypoint;
}

:Scanning_Loop_Start;

partition "Sensor Manager" {
  :Activate Metal Detector and Other Sensors;
  :Scan Surrounding Area for Mines;
}

partition "Path Planner (ML Model)" {
  if (Mine Detected?) then (Yes)
    partition "Data Logger / Comms" {
      :Mark Mine Location on Map;
      :Log Coordinates of Detected Mine;
    }
    :Recalculate Safest Path Using ML Algorithm;
    :Update Navigation Path to Avoid Mine;
    --> Scanning_Loop_Start;
  else (No)
    :Confirm Current Path is Safe;
    :Continue Flight on Current Path;
    --> Destination_Check;
  endif
}

:Destination_Check;

partition "Operator / Mission Controller" {
  if (Destination Reached?) then (Yes)
    --> Mission_Complete;
  else (No)
    :Determine Next Waypoint;
    --> Scanning_Loop_Start;
  endif
}

:Mission_Complete;

partition "Data Logger / Comms" {
  :Transmit Final Safe Path Data to Control Station;
}

partition "Control Station" {
  :Receive Path Data;
  :Generate and Print Safe Path Flyer;
}

partition "Operator / Mission Controller" {
  :Remove Mine Detection Attachment;
  :Attach Flyer Distribution Module;
  :Activate Flyer Delivery Mode;
}

partition "Flight Controller" {
  :Fly to Distribution Area;
  :Drop Flyers to End Users;
  :Return to Base;
}

partition "Operator / Mission Controller" {
  :Deactivate Drone Systems;
  :Mission Completed Successfully;
}

stop

@enduml
